
<% if (page.title) { %>
    <% if (page.layout==='area-page')  { %>
        <div id="between-head-and-foot">
        <main>
        <h1 id="page-title"><%- page.title %></h1>
        <%- page.content %>
        </main>
        </div>
    <%} else {%>
        <main> 
        <%- page.content %>
        </main>
    <%} %>
<%} else {%>
    <div id="between-head-and-foot">
    <%- page.content %>
    </div>
<%} %>